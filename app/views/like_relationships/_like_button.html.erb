<% if current_user.liking?(micropost) %>
  
  <%= form_for(current_user.like_relationships.find_by(micropost_id: micropost.id), 
                html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "お気に入り解除", class: "btn btn-danger btn-xs" %>
  <% end %>
  
<% else %>

  <%= form_for( current_user.like_relationships.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "お気に入り登録", class: "btn btn-primary btn-xs" %>
  <% end %>

<% end %>  